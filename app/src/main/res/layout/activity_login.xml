<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151111"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:scaleType="centerCrop"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="98dp"
        android:fontFamily="@font/beth_ellen"
        android:text="Sasak"
        android:textColor="#F9A825"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="126dp"
        android:layout_height="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/beth_ellen"
        android:text="Pawon"
        android:textColor="#F3EBEB"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="1dp"
        android:hint="Username"
        android:inputType="text"
        android:textColor="#EDE1E1"
        android:textColorHint="#E6E3E3" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="46dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ECE1E1"
        android:textColorHint="#EDEBEB" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="#F9A825"
        android:text="Login" />

    <Button
        android:id="@+id/button4"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="26dp"
        android:backgroundTint="#F9A825"
        android:text="Buat Akun Baru" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="14dp"
        android:text="lupa password ?"
        android:textColor="#4527A0" />


</RelativeLayout>
